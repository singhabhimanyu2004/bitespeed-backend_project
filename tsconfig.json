{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ESNext"],
    "types": ["node"],

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,

    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src"]
}